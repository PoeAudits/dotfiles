#!/usr/bin/env bash

# Chezmoi run_once script: Post-setup summary with next steps
# Named zz- to run last alphabetically after all other setup scripts

set -Eeuo pipefail

if [[ "${OPENCODE_INSTALL_SH:-}" == "1" ]]; then
  echo "[post-setup] Note: final key + next-steps summary prints at end of install.sh" >&2
  exit 0
fi

if [[ -x "$HOME/.local/bin/machine-setup-summary" ]]; then
  "$HOME/.local/bin/machine-setup-summary"
else
  echo "[post-setup] WARNING: missing: $HOME/.local/bin/machine-setup-summary" >&2
fi
